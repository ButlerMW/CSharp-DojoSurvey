@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey Index</title>
</head>
<body>
    <div class="border container text-center">

        <div class="row">
            <span style="color:red"asp-validation-for="Name"></span>
            <span style="color:red"asp-validation-for="Comment"></span>
        </div>

        <div class="col">
            <form asp-action="result" method="POST">
                <div class="row my-2">
                    <div class="col-2">
                        <label asp-for="Name">Your Name:</label>
                    </div>
                    <div class="col-2">
                        <input asp-for="Name" type="text" />
                    </div>
                </div>

                <div class="row my-2">
                    <div class="col-2">
                        <label asp-for="Location">Dojo Location:</label>
                    </div>
                    <div class="col-2">
                        <select name="location">
                            <option disabled>Select Location</option>
                            <option value="seattle">Seattle</option>
                            <option value="sanjose">San Jose</option>
                            <option value="la">LA</option>
                            <option value="online">Online</option>
                            <option value="dallas">Dallas</option>
                            <option value="arlingtion">Arlington</option>
                            <option value="chicago">Chicago</option>
                            <option value="tulsa">Tulsa</option>
                            <option value="oakland">Oakland</option>
                            <option value="boise">Boise</option>
                        </select>
                    </div>
                </div>

                <div class="row my-2">
                    <div class="col-2">
                        <label asp-for="Language">Favorite Language:</label>
                    </div>
                    <div class="col-2">
                        <select asp-for="Language">
                            <option disabled>Select Language</option>
                            <option value="java">Java</option>
                            <option value="python">Python</option>
                            <option value="cs">C#/.NET</option>
                            <option value="mean">MEAN</option>
                            <option value="ruby">Ruby</option>
                        </select>
                    </div>
                </div>

                <div class="row my-2">
                    <div class="col-2">
                        <label asp-for="Comment">Comment (optional):</label>
                    </div>
                </div>

                <div class="row my-2">
                    <div cla></div>
                    <textarea name="comment" id="comments" cols="80" rows="5"></textarea>
                </div>
                
                <div class="row-1 my-2 flex-row-reverse">
                    <button class="btn btn-info" type="submit" value="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>